<%- include('../../partials/header'); %>
    <%- include('../../partials/navbar'); %>
        <div class="container">
            <hr>
            <h2>Artigo</h2>
            <a class="btn btn-success" href="/admin/articles/new">Criar novo artigo</a>
            <hr>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Título</th>
                        <th>Slug</th>
                        <th>Categoria</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>

                    <% Article.forEach(article=>{ %>
                        <tr>
                            <td>
                                <%= article.id %>
                            </td>
                            <td>
                                <%= article.title %>
                            </td>
                            <td>
                                <%= article.slug %>
                            </td>
                            <td>
                                <%= article.Category.title %>
                            </td>
                            <td>
                                <%= %>
                            </td>
                        </tr>
                        <% });%>

                </tbody>
            </table>
        </div>
        <%- include('../../partials/footer'); %>

            <script>
                function confirmarDelecao(event, form) {
                    event.preventDefault();
                    var decision = confirm("Você quer deletara esta categoria?");
                    if (decision) {
                        form.submit();
                    }
                }
            </script>